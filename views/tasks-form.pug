include utils.pug

+validationErrorSummary(errors)
div(id='form-wrapper')
  form(id='task-form' action='/tasks' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    label Task Name *
    input(type='text' name='name' class='list-name' required value=createTask.name)
    label List 
    select(name='listId')
      each list in lists
        option(value=list.id)= list.name
    label Task Priority
    input(type='number' name='priority' class='task-priority' value=createTask.priority)
    label Due Date
    input(type='date' name='dueDate' class='task-dueDate' value=createTask.dueDate)
    label Start Date
    input(type='date' name='startDate' class='task-startDate' value=createTask.startDate)
    label Repeat?
    input(type='checkbox' name='repeating' value=createTask.repeating)
    //- label Completed?
    //- input(type='checkbox' name='completed' value=createTask.completed)
    label Estimated Time
    input(type='number' name='estimatedTime' value=createTask.estimatedTime)
    button(type='submit') Submit
